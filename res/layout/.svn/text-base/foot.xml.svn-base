<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_weight="1"
		android:layout_height="wrap_content" android:id="@+id/update"
		android:background="@drawable/handle">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/update"
			android:gravity="center" android:paddingTop="29px"
			android:background="@drawable/update" android:layout_gravity="center"/>
	</LinearLayout>
	<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content"  android:src="@drawable/line" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_weight="1"		android:layout_height="wrap_content" android:background="@drawable/handle"
		android:id="@+id/about">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/about"
			android:gravity="center" android:paddingTop="29px"
			 android:background="@drawable/about" android:layout_gravity="center"/>
	</LinearLayout>

	<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content"  android:src="@drawable/line" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_weight="1" android:id="@+id/quit"
		android:layout_height="wrap_content" android:background="@drawable/handle">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/quit"
			android:gravity="center" android:paddingTop="29px"
			 android:background="@drawable/quit" android:layout_gravity="center"/>
	</LinearLayout>
</LinearLayout>